                      <div class="tags-input" data-name="tags-input" id="sharedUser" Value="@user," name="shared">
                          <!--<span class="tag">CSS<span class="close"></span></span>
                            <span class="tag">JavaScript<span class="close"></span></span>
                            <span class="tag">HTML<span class="close"></span></span><-->
                      </div>
                      <h5>Visibility</h5>

                          <input type="radio" name="visibility" value="public">Public
                          <input type="radio" name="visibility" value="private" class="radioBox" checked="checked">Private<br>



              </div>
              <div class="modal-footer">
                  <input type="submit" class="btn btn-primary" id="uButton" data-toggle="modal" data-target="#descriptionModal">
              </div>
              </form>
          </div>
      </div>
  </div>



    <nav class="navbar navbar-expand-sm">
        <span class="navbar-brand"><a href="/" >168GAG</a></span>
        <ul class="navbar-nav">
            <li class="nav-item">
                <button class="btn btn-sharp upload-button" type="button" data-toggle="modal" data-target="#uploadModal">Upload a meme</button>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto align-items-center">
            <li class="nav-item mr-2">
                <div class="d-flex align-items-center">
                    <img id = "profile_pic" src="profile_pic.jpg" class="mr-1 nav-profile-pic rounded-circle">


                    <div class="media-body">

                            <!-- Your Form -->
