{{#if username}}

  <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">

              <div class="modal-header">
                  <h5 class="modal-title">Upload Meme</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
              </div>
              <form action="addMeme" method="post">
              <div class="modal-body">
  <!--                    <form action="/action_page.php">-->
                     <h5>Name</h5>
                      <input type="text"  name="tagName">
                      <br>
                      <input type="file" name="pic" accept="image/*" >
                      <h5>Description</h5>
                      <br>
                      <textarea rows="4" cols="50" name ="description"></textarea>
                      <h5>tags</h5>
                      <div class="tags-input" data-name="tags-input" id='tags' name="memeTags">
                          <!--<span class="tag">CSS<span class="close"></span></span>
                            <span class="tag">JavaScript<span class="close"></span></span>
                            <span class="tag">HTML<span class="close"></span></span><-->
                      </div>
