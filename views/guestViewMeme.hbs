    <div id="content">
        <div class="content">
            <div style="align-self: flex-start"id="top">
                <div id="info" class="meme-title"><!--{{meme-title}}-->we love u miss</div>
                
                {{#if visibility}}
                    <div class="meme-visibility">
                      <div class="meme-visibility-tooltip">
                        Private
                      </div>
                      <img src="lock.png">
                    </div>
                {{/if}}
            </div>

            <img id="meme" src={{meme_image}}>

            <a style="cursor: pointer; color: dimgray" href={{owner_page}} id="info">By me{{owner_name}}</a>

            <a id="description" style="color:#b9b4b4;">{{description}} </a>

  

            <div id="tag_btn">
                <!--
                <input id="btn" type="button" value="#BestProfEver">
                <input id="btn" type="button" value="#HaveMercyPls">
                -->
                
                {{#each tags}}
                    <input id="tag" type="button" style="align-self: flex-start" value = "#{{tag_name}}">
                {{/each}}
            </div>
            
        </div>
        
    </div>




</body>

