    <style type="text/css">
        body,
        html {
            height: 100%;
        }

        #header {
            background-color: black;
            height: 50px;
            width: 100%;
            border-radius: 4px;
        }


        #name {

            color: white;
            font-family: "Roboto", sans-serif;
            padding: 15px;
        }

        #content {
            width: 75%px;
            height: 100%;
            display: flex;
            flex-direction: column;
            margin: 0 auto;

            padding: 10px;
            box-sizing: border-box;

        }

        .content {
            width: 600px;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 auto;
        }

        #info {
            font-family: "Roboto", sans-serif;
            font-weight: bold;
            color: white;
            align-self: flex-start;
            /* margin: 10px;*/
        }

        #tags {
            font-family: "Roboto", sans-serif;
            font-style: italic;
            font-size: 1px;
            color: darkgray;
            margin: 5px;
            align-self: flex-start;
        }

        #meme {
            max-width: 600px;
            padding-bottom: 10px;
        }


        #description {
            font-family: "Roboto", sans-serif;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        #tag {
            background-color: cadetblue;
            color: white;
            border-radius: 8px;
            border: none;
            text-decoration: none;
            padding: 5px 7px;
            font-size: 15px;
            margin-top: 5px;
            margin-right: 5px;
            cursor: pointer;
            

        }

        #tag_btn {
            padding-bottom: 90px;
            padding-top: 10px;
            width: 100%;
            align-self: flex-start;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }

        .modal {
            color: black;
        }

        .meme-title {
            font-family: "Roboto", sans-serif;
            font-weight: bold;
            font-size: 40px;
            align-self: flex-start;
            /* margin: 10px;*/
        }


        .top {
            width: 75%;
            display: flex;
            justify-content: space-between;
            align-self: flex-start;
        }
        
        
        div.meme-visibility {
          display: flex;
          align-self: center;
          align-items: flex-end;
        }

        div.meme-visibility > img {
          height: 40px;
          width: 40px;
        }

        div.meme-visibility-tooltip {
          display: none;
          margin: 0 5px;
          font-size: 15px;
          /*background-color: rgba(255,255,255,0.4);*/
            background-color: lightgray;
          padding: 5px;
          color: black;
          border-radius: 10px;
          text-align: center;
        }

        div.meme-visibility:hover div.meme-visibility-tooltip {
          display: block;
        }
        
        #post_edit {
            margin-top: 40px;
            margin-bottom: 40px;

        }

        #edit_btn {
            border: none;
            margin: 5px;
            padding: 8px 20px;
            font-size: 15px;
            background-color: #50c686;
            font-weight: bold;
            font-family: Roboto, sans-serif;
            border-radius: 8px;
            color: white;
            cursor: pointer;
            margin-right: 3%;
        }

        #delete_btn {
            border: none;
            margin: 5px;
            padding: 8px 20px;
            font-size: 15px;
            background-color: #ed8964;
            font-weight: bold;
            font-family: Roboto, sans-serif;
            border-radius: 8px;
            color: white;
            cursor: pointer;
            margin-left: 3%;
        }

    </style>


</head>

<body>

