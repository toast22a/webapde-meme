  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="layout.css">

  <style>

    .public-div, .shared-div {
      text-align: center;
      padding: 0;
    }

    .post-link {
      margin: 2px;
      height: 200px;
      width: 200px;
      text-overflow: ellipsis;
      overflow: hidden;
      display: inline-block;
    }

    .post-div {
      position: relative;
      height: inherit;
      width: inherit;
    }

    img.post-image {
      position: absolute;
      top: 0; right: 0;
      height: inherit;
      width: inherit;
    }

    .post-text {
      color: white;
      text-align: center;
      padding-top: 25%;
    }

    .post-image:hover {
      opacity: .25;
    }

    .load-more-div {
      display: flex;
    }

    .load-more {
      font-size: 20px;
      margin: 30px auto;
    }

    .modal {
      color: black;
    }

    .modal-body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .modal-part-borderless {
      border-style: none;
    }

    .login-body > div {
      width: 70%;
    }

    .login-modal-body > div > h5 {
      margin: 3px 0;
    }

    .login-footer {
      display: flex;
      align-items: flex-end;
      justify-content: space-between;
    }

    .login-input {
      background-color: #F2F2F2;
      padding: 5px;
      border-style: solid;
      border-color: #E5E5E5;
      border-radius: 5px;
      margin: 0 0 10px 0;
      height: 36px;
      width: 100%;
    }

    .text-link:hover {
      text-decoration-line: underline;
      text-decoration-line: solid;
      cursor: pointer;
    }
  </style>

</head>

<body>

  {{> topbar}}

  {{> search}}

  <div class="container-fluid public-div">


  </div>

  <div class="container-fluid load-more-div">
  <button class="btn btn-sharp load-more" type="button">Load more</button>
  </div>

  <script>

/*  $(".search-bar-button").click(function() {
            location.href = "searchByTag_guest"
        })*/

  var memeNames = ["We love you miss", "Me @ Jollibee", "wow haha", "loool"]
  function loadMemes(){
      for (var i=0;i<15;i++){
        var a = document.createElement("a")
        var post = document.createElement("div")
        var postText = document.createElement("div")
        var img = document.createElement("img")

        var j = Math.floor(Math.random()*4)+1

        a.href = "guestViewMeme"
        a.className = "post-link"
        post.className = "post-div"
        postText.className = "post-text"
        $(postText).text(memeNames[j-1])
        img.src = "meme"+j+".png"
        img.className = "post-image"
        $(post).append(postText)
        $(post).append(img)
        $(a).append(post)
        $(".public-div").append(a)
      }
  }

  $(".load-more").click(function(){
      var lm = $(".load-more-div").detach()
      loadMemes()
      $(document.body).append(lm)
  })

  $(document).ready(() => {
      $("#lButton").click(() => {
          if ($('#lUser').val() != "" && ($('#lPassword')).val() != "") {
              $('#loginModal .close').click();
              alert("successfully entered your Account");
              /*$('#lUser').val('');
              $('#lPassword').val('');*/
              //window.location.href = "homepage"
          } else if ($('#lUser').val() === "") {
              alert("please enter your username")
          } else {
              alert("please enter your Password")
          }
      })

      $("#sButton").click(() => {
          if ($('#sUser').val() != "" && ($('#sPassword')).val() != "") {

              $('#loginModal .close').click();
              $("#signUpModal .close").click();
              alert("successfully entered your Account");
            /*  $('#sUser').val('');
              $('#sPassword').val('');*/
          } else if ($('#sUser').val() === "") {
              alert("please enter your username")
          } else {
              alert("please enter your Password")
          }
      })


  })

  loadMemes()

  </script>

</body>

</html>
